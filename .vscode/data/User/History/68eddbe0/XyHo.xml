<mvc:View
    controllerName="project1.controller.SplitAppView"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <SplitApp
        id="SplitAppDemo"
        initialDetail="detail"
        initialMaster="master">

       
        <detailPages>
        <Page id="detail" title="{masterDetail>/selectedItem/title}" backgroundDesign="Solid">
            <VBox class="sapUiSmallMargin">
                <Text text="{masterDetail>/selectedItem/description}" />
            </VBox>
        </Page>
      
    </detailPages>

           
       

        
        <masterPages>
        <Page id="master" title="Master 1" backgroundDesign="List">
            <List
                items="{masterDetail>/items}"
                mode="SingleSelectMaster"
                itemPress=".onItemPress">
                <StandardListItem
                    title="{masterDetail>title}"
                    description="{masterDetail>description}"
                    type="Active"/>
            </List>
        </Page>

        
        <Page id="master2" title="Master 2" backgroundDesign="List" showNavButton="true" navButtonPress=".onPressMasterBack">
            <List
                items="{masterDetail>/items}"
                mode="SingleSelectMaster"
                itemPress=".onItemPress">
                <StandardListItem
                    title="{masterDetail>title}"
                    description="{masterDetail>description}"
                    type="Active"/>
            </List>
        </Page>
    </masterPages>

    </SplitApp>
</mvc:View>
